node {
    stage('checkout code') {
        checkout scm
    }
    stage('Build') {
        echo 'Building...'
        mvnHome = tool 'maven'
    }
    stage('Test') {
        echo 'Testing...'
          withEnv([MVN_HOME=$mvnHome]) {
            sh 'mvn test'
    }
    }
    stage('Deploy') {
        echo 'Deploying...'
    }
}