pipeline {
    agent any
    tools {
            maven 'Maven 3.5.2'
            jdk 'jdk8'
        }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                    sh '''
                    echo "PATH = ${PATH}"
                    echo ""M2_HOME = ${M2_HOME}
                    '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                sh 'mvn test'
                }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}