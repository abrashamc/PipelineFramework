pipeline {
    agent any
    tools {
            maven 'maven'
            jdk 'jdk'
        }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                    sh '''
                    echo "PATH = ${PATH}"
                    echo ""M2_HOME = ${M2_HOME}
                    '''
                     mvnHome = tool 'maven'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                    withEnv([MVN_HOME=$mvnHome]){
                         sh 'mvn test'
                    }
                }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}