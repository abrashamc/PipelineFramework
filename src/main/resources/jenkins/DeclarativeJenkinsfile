pipeline {
    agent any
    tools {
            maven 'maven'
            //jdk 'jdk'
        }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                    sh '''
                    echo "PATH = ${PATH}"
                    echo ""M2_HOME = ${M2_HOME}
                    '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
                    ssh "mvn test"
                }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}